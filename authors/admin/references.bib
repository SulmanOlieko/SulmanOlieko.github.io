   keywords = {environmental impact quotient,integrated pest management,mango fruit fly},
   month = {3},
   pages = {14-26},
   title = {Health and environmental effects of adopting an integrated fruit fly management strategy among mango farmers in Kenya},
   volume = {15},
   url = {https://afjare.org/media/articles/2.-Mwungu-et-al.pdf},
   year = {2020},
}
