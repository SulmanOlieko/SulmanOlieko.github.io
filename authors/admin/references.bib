   journal = {International Journal of Tropical Insect Science},
   keywords = {Africa,Mangifera indica,Tephritidae,food security,icipe,integrated pest management,smallholder farmers},
   month = {6},
   pages = {80-89},
   publisher = {Cambridge University Press},
   title = {Grower adoption of an integrated pest management package for management of mango-infesting fruit flies (Diptera: Tephritidae) in Embu, Kenya},
   volume = {35},
   year = {2015},
}
